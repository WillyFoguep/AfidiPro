{
  "appId": "com.afidipro.app",
  "appName": "AfidiPro",
  "server": {
    "url": "https://www.afidipro.com",
    "cleartext": false,
    "allowNavigation": ["*"]
  },
  "plugins": {
    "StatusBar": {
      "overlaysWebView": false,
      "style": "DARK"
    },
    "SplashScreen": {
      "launchAutoHide": true,
      "launchShowDuration": 2000
    },
    "CapacitorHTTP": {
      "enabled": true
    }
  },
  "webDir": "www",
  "android": {
    "webContentsDebuggingEnabled": false,
    "userAgent": "Mozilla/5.0 (Linux; Android 12) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Mobile Safari/537.36"
  }
}
